<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:background="@drawable/backround_radius_navigation"
    android:orientation="vertical"
    android:padding="5dp"
>

    <TextView
        android:id="@+id/txt_baslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ders Ekleme"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ders_adi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="5"
        android:ems="10"
        android:fontFamily="@font/arsenal"
        android:hint="Dersin AdÄ±"
        android:textAlignment="viewStart"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <view
        android:id="@+id/view12"
        class="android.support.v7.widget.ActionMenuView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_baslangic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:srcCompat="@drawable/ic_timer_black_24dp" />

        <TextView
            android:id="@+id/txt_finale_kalan2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/arsenal"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_bitis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:srcCompat="@drawable/ic_timer_off_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_baslangic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="5"
            android:fontFamily="@font/arsenal"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/arsenal"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_bitis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="5"
            android:fontFamily="@font/arsenal"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ders_programi_ekle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_radius"
        android:shadowRadius="3"
        android:text="Ekle"
        android:textColor="@color/colorWhiting" />
</LinearLayout>