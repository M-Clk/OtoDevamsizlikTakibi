<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:background="@drawable/backround_radius_navigation"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txt_baslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ders Ekleme"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_ekle_ders_adi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="4dp"
            android:layout_weight="7"
            android:hint="Dersin Adı "
            android:inputType="textCapWords"
            android:textColor="@color/colorText" />

        <Spinner
            android:id="@+id/spn_kredi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="4" />
    </LinearLayout>

    <EditText
        android:id="@+id/txt_ekle_devamsizlik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:hint="Devamsızlık"
        android:inputType="none|number|numberSigned|numberDecimal"
        android:textColor="@color/colorText" />

    <EditText
        android:id="@+id/txt_ekle_devamsizlik_siniri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:hint="Devamsızlık Sınırı"
        android:inputType="none|number|numberSigned|numberDecimal"
        android:textColor="@color/colorText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbSinir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="true"
            android:foregroundGravity="center"
            android:gravity="center" />

        <EditText
            android:id="@+id/txt_ekle_kritik_sinir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="4dp"
            android:layout_weight="6"
            android:hint="Kritik Alarm Sınırı"
            android:inputType="none|number|numberSigned|numberDecimal"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ders_ekle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_radius"
        android:shadowRadius="3"
        android:text="Ekle"
        android:textColor="@color/colorWhiting" />
</LinearLayout>