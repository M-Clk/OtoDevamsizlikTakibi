<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_data_dialog"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@drawable/backround_radius_navigation"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_baslik_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:padding="4dp"
        android:text="@string/alarm_sesini_secin"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_alarm"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:filterTouchesWhenObscured="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:paddingEnd="2dp"
        android:paddingRight="2dp">

        <Button
            android:id="@+id/btn_vazgec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius"
            android:text="VazgeÃ§" />

        <Button
            android:id="@+id/btn_alarm_kaydet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius"
            android:text="Kaydet" />
    </LinearLayout>

</LinearLayout>